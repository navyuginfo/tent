{{#if view.isEntitled}}
	<li>
		<a {{bindAttr class="view.hasAction:menu-link view.isDisabled:ui-state-disabled"}} href="#" {{action menuClicked target="view"}}>
			<i {{bindAttr class="view.icon"}} {{bindAttr data-title="view.title"}} data-placement="right" data-animation="false"></i>
			<span class="content">{{loc view.title}}</span>
		</a>
		{{#if view.hasChildren}}
			<div class="mp-level">
				<h2 class="icon icon-display">{{loc view.title}}</h2>
				<a class="mp-back" href="#">back</a>
				<ul>
					{{yield}}
				</ul>
			</div>
		{{/if}}
	</li>
{{/if}}